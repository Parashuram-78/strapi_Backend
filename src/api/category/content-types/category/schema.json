{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": { 
    "singularName": "category", 
    "pluralName": "categories", 
    "displayName": "Category" 
  },
  "options": { 
    "draftAndPublish": false 
  },
  "attributes": {
    "name": { 
      "type": "string", 
      "required": true 
    },
    "slug": { 
      "type": "uid", 
      "targetField": "name", 
      "required": true 
    },
    "subCategories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sub-category.sub-category",
      "mappedBy": "category"
    },
    "blogs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog.blog",
      "inversedBy": "categories"
    }
  }
} 